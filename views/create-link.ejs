<body>
  <navigation>
    <div class="close-container">
      <a href="/home" class="close-x">‚ùå</a>
    </div>
  </navigation>

  <div class="profile-container">
    <h1>Create link</h1>
    <p><%=app[0].name%></p>

    <input name="appID" id="appID" type="text" value="<%=app[0]._id%>" hidden/>

    <label for="name">Name
      <input name="name" id="name" type="text" maxlength="15" placeholder="QR-Scanner" value="" />
    </label>

    <label for="redirect">Redirect link
      <input name="redirect" id="redirect" type="text" maxlength="15" placeholder="https://template.nl/" value="" />
    </label>
    
    <label for="requirements">Requirements
      <input name="requirements" id="requirements" type="text" maxlength="15" placeholder="test" value="" />
    </label>


    
    


    <button id="create-link-button" class="profile-save-button">
      <i class="fa-solid fa-check"></i>
    </button>
  </div>
  </div>
</body>

</html>