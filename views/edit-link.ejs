  </navigation>

  <div class="profile-container">
    <h1>Edit link</h1>

    <input name="linkID" id="linkID" type="text" value="<%=app._id%>" hidden/>

    <label for="name">Name
      <input name="name" id="name" type="text" maxlength="15" value="<%= app.name %>" />
    </label>

    <label for="redirect">Redirect link
      <input name="redirect" id="redirect" type="text" maxlength="15" value="<%= app.link %>" />
    </label>
    
    <label for="requirements">Requirements
      <input name="requirements" id="requirements" type="text" maxlength="15" value="<%= app.requirements %>" />
    </label>


    


    <a href="<%= qrcode %>" download>
      download qrcode
    </a>

